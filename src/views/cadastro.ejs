<%- include('includes/head') %> <%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-5">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seus contatos</p>

      <%- include('includes/messages') %>

      <form action="/contato/register" method="post">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
        <div class="form-group">
          <label for="exampleInputName1">Nome</label>
          <input
            name="name"
            type="text"
            class="form-control"
            id="exampleInputName1"
            aria-describedby="nameHelp"
            placeholder="Nome"
            value="<%= contato.name %>"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputSobrenome1">Sobrenome</label>
          <input
            name="sobrenome"
            type="text"
            class="form-control"
            id="exampleInputSobrenome1"
            aria-describedby="sobrenomeHelp"
            placeholder="Sobrenome"
            value="<%= contato.sobrenome %>"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email</label>
          <input
            name="email"
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            placeholder="Email"
            value="<%= contato.email %>"
          />
        </div>
        <div class="form-group">
          <label for="exampleInputCel1">Celular</label>
          <input
            name="cel"
            type="tel"
            class="form-control"
            id="exampleInputCel1"
            aria-describedby="celHelp"
            placeholder="Celular"
            value="<%= contato.cel %>"
          />
        </div>
        <button type="submit" class="btn btn-primary my-3">Salvar</button>
      </form>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
